NODE_ENV=production

# Backend Server
# Default port is 3001. On production with Apache reverse proxy, this stays the same
# Apache will proxy requests from :80 and :443 to :3001
PORT=3001

# MongoDB Configuration - MongoDB Atlas
# Steps to setup:
# 1. Go to https://www.mongodb.com/cloud/atlas
# 2. Create a cluster (M0 free tier is sufficient)
# 3. Create a database user with username and password
# 4. Get the connection string and paste it below
# 5. Update: username, password, and database-name
# IMPORTANT: Replace @ with %40 if password contains @
MONGODB_URI=mongodb+srv://username:password@cluster-name.mongodb.net/555-results?retryWrites=true&w=majority

# JWT Secret (Generate strong random secret for production!)
# Generate using: openssl rand -hex 32
# On Ubuntu: openssl rand -hex 32
# Store this securely and keep it consistent across deployments
JWT_SECRET=generate-a-strong-random-secret-key-here-minimum-32-characters

# Frontend Configuration
# Set this to your production domain/host
# Examples: https://yourdomain.com, https://555-results.example.com
FRONTEND_URL=https://yourdomain.com

# API URL for Frontend Build
# When using Apache reverse proxy, this should be the same as FRONTEND_URL
# The frontend will make API calls to /api/* which Apache proxies to http://localhost:3001/api/*
VITE_API_URL=https://yourdomain.com
